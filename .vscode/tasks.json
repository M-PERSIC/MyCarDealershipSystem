{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "Clean",
          "type": "shell",
          "command": "rm -rf bin",
          "problemMatcher": []
      },
      {
          "label": "Compile Java",
          "type": "shell",
          "command": "javac",
          "args": [
              "-d",
              "bin",
              "src/**/*.java"
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          },

      }
  ]
}
